            .feature
                img(src="images/custom/shredder.svg", alt="paper shredder").feature__icon 
                .feature__title Digital Consultation
                .feature__content Discuss requirements and provide a step-by-step guide detailing creative and logistic deliverables

            .feature
                img(src="images/custom/lamp.svg", alt="paper shredder").feature__icon
                .feature__title Niche Packages
                .feature__content Create unique packages to meet your needs

            .feature
                img(src="images/custom/telescope.svg", alt="telescope").feature__icon
                .feature__title Marketing Outlook
                .feature__content Combine  marketing elements with video to create brand presence

        section.about__philosophies
            .philosophy__statement
                .philosophy__statement--title
                    p Watch 
                        span.text-yellow Philosophy
                .minion.philosophy__statement--text 
                    p Creating visually stimulating content which provokes thought and drives dialogue about businesses/individuals.
                .minion.philosophy__statement--text 
                    p Transform the African landscape of Digital Content and Media into one which is authentic to its people and is profitable.
            .philosophy__slogan
                .philosophy__slogan--item
                    img(src="images/custom/about_entertain.svg", alt="entertain").philosophy__slogan--image
                    .philosophy__slogan--text ENTERTAIN
                .philosophy__slogan--divider
                .philosophy__slogan--item
                    img(src="images/custom/about_educate.svg", alt="educate").philosophy__slogan--image
                    .philosophy__slogan--text EDUCATE
                .philosophy__slogan--divider
                .philosophy__slogan--item
                    img(src="images/custom/about_evolve.svg", alt="evolve").philosophy__slogan--image
